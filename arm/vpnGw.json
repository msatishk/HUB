{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": { "defaultValue": "myVnet", "type": "string" },
    "location": { "defaultValue": "[resourceGroup().location]", "type": "string" },
    "gwName": { "defaultValue": "myGw", "type": "string", "metadata": { "description": "Name for the VPN gateway" } },
    "enableBgp": { "type": "string", "metadata": { "description": "Enable or disable BGP" }, "defaultValue": "false", "allowedValues": ["true", "false"] },
    "PIPName": { "defaultValue": "myGwPIP", "type": "string", "metadata": { "description": "Public IP address for the VPN gateway" } }
  },
  "variables": {
    "networkApiVersion": "2021-08-01",
    "string2bool": { "true": true, "false": false }
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2021-08-01",
      "name": "[parameters('PIPName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard" },
      "properties": { "publicIPAllocationMethod": "Dynamic" }
    },
    {
      "type": "Microsoft.Network/virtualNetworkGateways",
      "apiVersion": "2021-08-01",
      "name": "[parameters('gwName')]",
      "location": "[parameters('location')]",
      "dependsOn": ["[parameters('PIPName')]"],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat(parameters('vnetName'), 'vnetGwConfig')]",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/GatewaySubnet')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('PIPName'))]"
              }
            }
          }
        ],
        "gatewayType": "Vpn",
        "gatewaySize": "Default",
        "vpnType": "RouteBased",
        "enableBgp": "[variables('string2bool')[parameters('enableBgp')]]"
      }
    }
  ]
}

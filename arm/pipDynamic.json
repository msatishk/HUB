{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "pipName": {
            "defaultValue": "myPIP",
            "type": "string"
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "comments": "Create public IP address",
            "apiVersion": "2020-06-01", // FIXED: Updated API Version for Standard SKU support
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('pipName')]",
            "location": "[parameters('location')]",
            "sku": { 
                "name": "Standard" // FIXED: Explicitly set Standard SKU
            },
            "properties": {
                "publicIPAllocationMethod": "Static" // FIXED: Must be Static for Standard SKU
            }
        }
    ]
}

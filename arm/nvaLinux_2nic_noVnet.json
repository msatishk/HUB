{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": { "type": "string", "defaultValue": "myNva" },
    "vmCount": { "type": "int", "defaultValue": 1 },
    "vmUsr": { "type": "string", "defaultValue": "myadmin" },
    "vmPwd": { "type": "securestring", "defaultValue": null },
    "vmSize": { "type": "string", "defaultValue": "Standard_B2ms" },
    "vnetName": { "type": "string", "defaultValue": "myVnet4" },
    "subnet0Name": { "type": "string", "defaultValue": "subnet1" },
    "subnet1Name": { "type": "string", "defaultValue": "subnet2" },
    "ip0": { "type": "string", "defaultValue": "10.0.0.10" },
    "ip1": { "type": "string", "defaultValue": "10.0.1.10" },
    "pipName": { "type": "string", "defaultValue": "nva-publicIP" },
    "scriptUri": { "type": "string", "defaultValue": "[uri(deployment().properties.templateLink.uri, 'linuxNVAconfig.sh')]" },
    "scriptCmd": { "type": "string", "defaultValue": "sh linuxNVAconfig.sh" }
  },
  "variables": {
    "computeApiVersion": "2023-03-01",
    "vmExtensionApiVersion": "2023-07-01"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2023-07-01",
      "name": "[concat(parameters('vmName'), '-', copyIndex(1), '-nic0')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig0",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[concat(parameters('ip0'), copyIndex(1))]",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnet0Name'))]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('pipName'), '-', copyIndex(1)))]"
              }
            }
          }
        ]
      },
      "sku": { "name": "Standard" },
      "copy": { "name": "nic0Copy", "count": "[parameters('vmCount')]" }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2023-07-01",
      "name": "[concat(parameters('vmName'), '-', copyIndex(1), '-nic1')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[concat(parameters('ip1'), copyIndex(1))]",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnet1Name'))]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        "[concat(parameters('vmName'), '-', copyIndex(1), '-nic0')]"
      ],
      "copy": { "name": "nic1Copy", "count": "[parameters('vmCount')]" }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2023-03-01",
      "name": "[concat(parameters('vmName'), '-', copyIndex(1))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "0001-com-ubuntu-server-jammy",
            "sku": "22_04-lts-gen2",
            "version": "latest"
          },
          "osDisk": {
            "osType": "Linux",
            "createOption": "FromImage",
            "diskSizeGB": 31
          }
        },
        "osProfile": {
          "computerName": "[concat(parameters('vmName'), '-', copyIndex(1))]",
          "adminUsername": "[parameters('vmUsr')]",
          "adminPassword": "[parameters('vmPwd')]",
          "linuxConfiguration": { "disablePasswordAuthentication": false }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '-', copyIndex(1), '-nic0'))]",
              "properties": { "primary": true }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '-', copyIndex(1), '-nic1'))]",
              "properties": { "primary": false }
            }
          ]
        }
      },
      "copy": { "name": "vmCopy", "count": "[parameters('vmCount')]" },
      "dependsOn": [
        "[concat(parameters('vmName'), '-', copyIndex(1), '-nic0')]",
        "[concat(parameters('vmName'), '-', copyIndex(1), '-nic1')]"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2023-07-01",
      "name": "[concat(parameters('vmName'), '-', copyIndex(1), '/installcustomscript')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": ["[parameters('scriptUri')]"],
          "commandToExecute": "[parameters('scriptCmd')]"
        }
      },
      "dependsOn": [
        "[concat(parameters('vmName'), '-', copyIndex(1))]"
      ],
      "copy": { "name": "extCopy", "count": "[parameters('vmCount')]" }
    }
  ]
}

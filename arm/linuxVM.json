{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "defaultValue": "myVnet",
            "type": "string"
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string"
        },
        "subnetName": {
            "defaultValue": "serverSubnet",
            "type": "string"
        },
        "adminUsername": {
            "defaultValue": null,
            "type": "string"
        },
        "adminPassword": {
            "defaultValue": null,
            "type": "securestring"
        },
        "vmName": {
            "defaultValue": "myvm",
            "type": "string"
        },
        "vmType": {
            "defaultValue": "ubuntu",
            "type": "string",
            "allowedValues": [
                "ubuntu"
            ]
        },
        "vmSize": {
            "defaultValue": "Standard_B1s",
            "type": "string"
        },
        "createPip": {
            "defaultValue": "yes",
            "type": "string",
            "allowedValues": ["yes", "no"]
        }
    },
 
    "variables": {
        "nicName": "[concat(parameters('vmName'),'-nic')]",
        "pipName": "[concat(parameters('vmName'),'-pip')]",
        "diskName": "[concat(parameters('vmName'),'-disk')]",
        "computeApiVersion": "2023-07-01", // Renamed for clarity
        "nicDeploymentApiVersion": "2020-06-01", // Updated to a more recent, stable version
        "nicTemplateUriHash": {
            "yes": "[uri(deployment().properties.templateLink.uri, 'nic_noNSG_noSLB_PIP_dynamic.json')]",
            "no": "[uri(deployment().properties.templateLink.uri, 'nic_noNSG_noSLB_noPIP_dynamic.json')]"
        },
        "nicTemplateURI": "[variables('nicTemplateUriHash')[parameters('createPip')]]",
        "skuDataTable": {
            "ubuntu": {
                "sku": "22_04-lts-gen2",
                "publisher": "canonical",
                "offer": "0001-com-ubuntu-server-jammy",
                "size": "[parameters('vmSize')]"
            }
        },
        "skuData": "[variables('skuDataTable')[parameters('vmType')]]"
    },
    "resources": [
        {	
        "comments": "VMs created and linked to NICs",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "apiVersion": "[variables('computeApiVersion')]", // FIX: Switched back to variable but using a renamed variable that is explicitly used for compute. If this fails, hardcode to "2023-07-01"
            "location": "[parameters('location')]",
            "properties": {
            "hardwareProfile": {
                    "vmSize": "[variables('skuData')['size']]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('skuData')['publisher']]",
                        "offer": "[variables('skuData')['offer']]",
                        "sku": "[variables('skuData')['sku']]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "createOption": "FromImage",
                        "diskSizeGB": 31
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "secrets": [],
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
                        }
                    ]
                }
            },
            "resources": [
            ],
            "dependsOn": [
                "[variables('nicName')]"
            ]
        },
        {
            "comments": "Create NIC for the VM with or without public IP",
            "name": "[variables('nicName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('nicDeploymentApiVersion')]", // FIX: Using updated API version variable
            "properties": {
            "mode": "Incremental",
            "templateLink": {
                    "uri": "[variables('nicTemplateUri')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters":  {
                        "pipName": { "value": "[variables('pipName')]"},
                        "location": { "value": "[parameters('location')]"},
                        "nicName": { "value": "[variables('nicName')]"},
                        "vnetName": { "value": "[parameters('vnetName')]"},
                        "subnetName": { "value": "[parameters('subnetName')]"}
                    }
                },
            "dependsOn": []
        }
    ]
}

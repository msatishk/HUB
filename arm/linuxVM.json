{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        // ... (Parameters are unchanged)
        "createPip": {
            "defaultValue": "yes",
            "type": "string",
            "allowedValues": ["yes", "no"]
        }
    },
 
    "variables": {
        "nicName": "[concat(parameters('vmName'),'-nic')]",
        "pipName": "[concat(parameters('vmName'),'-pip')]",
        "diskName": "[concat(parameters('vmName'),'-disk')]",
        "apiVersion": "2023-07-01",
        "networkApiVersion": "2018-08-01", // Added networkApiVersion
        "nicTemplateUriHash": {
            "yes": "[uri(deployment().properties.templateLink.uri, 'nic_noNSG_noSLB_PIP_dynamic.json')]",
            "no": "[uri(deployment().properties.templateLink.uri, 'nic_noNSG_noSLB_noPIP_dynamic.json')]"
        },
        "nicTemplateURI": "[variables('nicTemplateUriHash')[parameters('createPip')]]",
        "skuDataTable": {
            "ubuntu": {
                "sku": "22_04-lts-gen2",
                "publisher": "canonical",
                "offer": "0001-com-ubuntu-server-jammy",
                "size": "[parameters('vmSize')]"
            }
        },
        "skuData": "[variables('skuDataTable')[parameters('vmType')]]"
    },
    "resources": [
        // **NEW RESOURCE: Create Public IP with Standard SKU**
        {
            "comments": "Create Standard Public IP address for the VM",
            "apiVersion": "[variables('networkApiVersion')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('pipName')]",
            "location": "[parameters('location')]",
            "sku": { 
                "name": "Standard" 
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            },
            "condition": "[equals(parameters('createPip'), 'yes')]"
        },
        {	
        "comments": "VMs created and linked to NICs",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            // ... (rest of VM resource is unchanged)
            "dependsOn": [
                "[variables('nicName')]",
                // Added new dependency
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('pipName'))]" 
            ]
        },
        {
            "comments": "Create NIC for the VM with or without public IP",
            "name": "[variables('nicName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-06-01",
            "properties": {
            "mode": "Incremental",
            "templateLink": {
                    "uri": "[variables('nicTemplateUri')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters":  {
                        "pipName": { "value": "[variables('pipName')]"},
                        "location": { "value": "[parameters('location')]"},
                        "nicName": { "value": "[variables('nicName')]"},
                        "vnetName": { "value": "[parameters('vnetName')]"},
                        "subnetName": { "value": "[parameters('subnetName')]"}
                    }
                },
            "dependsOn": [
                // Added new dependency
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('pipName'))]"
            ]
        }
    ]
}
